{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": false,
    "declaration": false,
    "removeComments": true,
    "strictNullChecks": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "es6",
      "dom"
    ],
    "outDir": "dist",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types/**/*.d.ts"
    ]
  }
}